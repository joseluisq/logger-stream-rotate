{
    "compileOnSave": false,
    "include": [
        "src"
    ],
    "exclude": [
        "test",
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "./",
        "strict": true,
        "declaration": true,
        "sourceMap": false,
        "pretty": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ]
    }
}
